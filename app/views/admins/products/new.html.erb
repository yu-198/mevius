<div class="container">
	<div class="row">
		<%= form_for(@product, url:admins_products_path) do |f| %>
			<h1>新規登録画面</h1>
			<label>画像投稿</label>
			<%= f.attachment_field :image%>
			<label>商品名</label>
			<%= f.text_field :name%>
			<label>商品説明</label>
			<%= f.text_field :introduction%>
			<label>ジャンル</label>
			<%= f.collection_select :genre_id, Genre.where(is_disable: false), :id, :name %>
			<label>税抜価格</label>
			<%= f.text_field :price%>
			<label>販売ステータス</label>
			<%= f.select :is_stopped,{販売中:false, 販売停止:true} %>
			<%= f.submit "登録する"%>
		<% end %>
	</div>
</div>